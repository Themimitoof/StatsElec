extends layout/main

block append content
    .container    
        h2.margin-25-top Liste compteurs
        table.table--zebra
            thead
                th Nom
                th Localisation
                th Identifiant
                th Contrat
                th Puissance souscrite
                th(width="25%") 
            tbody
                each counter in data
                    tr
                        td= counter.name
                        td= counter.localisation
                        td= counter.id
                        td 
                            span.tag--primary= counter.contract.toUpperCase()
                        td
                            span.tag--primary= counter.sub_power
                            
                        td
                            a(href="/counter/" + counter.id) Voir la page du compteur